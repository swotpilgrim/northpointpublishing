---
import BookCard from './BookCard.astro';
import { getAllBooks } from '../utils/dataHelpers.js';

const books = getAllBooks();
---

<div class="book-grid">
  {books.map(book => (
    <BookCard book={book} />
  ))}
</div>

<style>
  .book-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 0;
  }
</style>