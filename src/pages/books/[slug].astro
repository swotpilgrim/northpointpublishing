---
import Layout from '../../layouts/Layout.astro';
import { getAllBooks, getBookById, getAuthorById, getGenreByCode, getBooksByAuthor } from '../../utils/dataHelpers.js';

export async function getStaticPaths() {
  const books = getAllBooks();
  return books.map((book) => ({
    params: { slug: book.id },
  }));
}

const { slug } = Astro.params;
const book = getBookById(slug);

if (!book) {
  return Astro.redirect('/404');
}

const author = getAuthorById(book.author_id);
const genre = getGenreByCode(book.genre_code);
const relatedBooks = getBooksByAuthor(book.author_id).filter(b => b.id !== book.id).slice(0, 3);
---

<Layout title={`${book.title} - North Point Publishing`} description={book.description}>
  <div class="container">
    <nav class="breadcrumb">
      <a href="/northpointpublishing/">‚Üê Back to Catalog</a>
    </nav>

    <div class="book-detail">
      <div class="book-cover-large">
        <img 
          src={book.cover_image} 
          alt={`Cover of ${book.title}`}
          onerror="this.src='/northpointpublishing/images/covers/cover_placeholder.png'"
        />
      </div>

      <div class="book-info">
        <h1 class="book-title">{book.title}</h1>
        <h2 class="book-author">by {author?.name}</h2>
        
        <div class="book-meta">
          <div class="meta-item">
            <span class="label">Genre:</span>
            <span class="genre-badge">{genre?.name}</span>
          </div>
          <div class="meta-item">
            <span class="label">Published:</span>
            <span>{book.publication_year}</span>
          </div>
          <div class="meta-item">
            <span class="label">Pages:</span>
            <span>{book.page_count}</span>
          </div>
          <div class="meta-item">
            <span class="label">ISBN:</span>
            <span>{book.isbn}</span>
          </div>
          <div class="meta-item price">
            <span class="label">Price:</span>
            <span class="price-value">{book.price}</span>
          </div>
        </div>

        <div class="book-description">
          <h3>Description</h3>
          <p>{book.description}</p>
        </div>

        {author && (
          <div class="author-info">
            <div class="author-header">
              <img src="/northpointpublishing/images/authors/author_placeholder.jpg" alt={author.name} class="author-photo" />
              <h3>About the Author</h3>
            </div>
            <p><strong>{author.name}</strong> - {author.bio}</p>
            <p><em>Specialty: {author.specialty}</em></p>
          </div>
        )}
      </div>
    </div>

    {relatedBooks.length > 0 && (
      <div class="related-books">
        <h3>More by {author?.name}</h3>
        <div class="related-grid">
          {relatedBooks.map(relatedBook => (
            <div class="related-book">
              <a href={`/northpointpublishing/books/${relatedBook.id}`}>
                <div class="related-cover">
                  <img 
                    src={relatedBook.cover_image} 
                    alt={`Cover of ${relatedBook.title}`}
                    onerror="this.src='/northpointpublishing/images/covers/cover_placeholder.png'"
                  />
                </div>
                <h4>{relatedBook.title}</h4>
                <p>{relatedBook.publication_year}</p>
              </a>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .breadcrumb {
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: #666666;
    text-decoration: none;
    font-style: italic;
    transition: color 0.3s ease;
  }

  .breadcrumb a:hover {
    color: #000000;
  }

  .book-detail {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .book-cover-large {
    background: #f8f8f8;
    border-radius: 4px;
    padding: 1rem;
    border: 1px solid #cccccc;
    height: fit-content;
  }

  .book-cover-large img {
    width: 100%;
    height: 450px;
    object-fit: cover;
    border-radius: 8px;
  }

  .book-info {
    padding: 1rem 0;
  }

  .book-title {
    color: #000000;
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    font-family: 'Times New Roman', serif;
    line-height: 1.2;
  }

  .book-author {
    color: #666666;
    font-size: 1.5rem;
    font-style: italic;
    margin: 0 0 2rem 0;
    font-weight: normal;
  }

  .book-meta {
    background: #f8f8f8;
    padding: 1.5rem;
    border-radius: 4px;
    margin-bottom: 2rem;
    border: 1px solid #cccccc;
  }

  .meta-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .meta-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .meta-item.price {
    border-top: 1px solid #cccccc;
    padding-top: 0.75rem;
    margin-top: 0.75rem;
  }

  .label {
    color: #000000;
    font-weight: bold;
  }

  .genre-badge {
    background: #000000;
    color: #ffffff;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: bold;
  }

  .price-value {
    color: #000000;
    font-size: 1.2rem;
    font-weight: bold;
  }

  .book-description, .author-info {
    margin-bottom: 2rem;
  }

  .author-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .author-photo {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #cccccc;
  }

  .book-description h3, .author-info h3 {
    color: #000000;
    font-size: 1.3rem;
    margin: 0;
    font-family: 'Times New Roman', serif;
  }

  .book-description p, .author-info p {
    color: #000000;
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }

  .related-books {
    background: #f8f8f8;
    padding: 2rem;
    border-radius: 4px;
    border: 1px solid #cccccc;
  }

  .related-books h3 {
    color: #000000;
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    text-align: center;
    font-family: 'Times New Roman', serif;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
  }

  .related-book {
    text-align: center;
  }

  .related-book a {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.3s ease;
  }

  .related-book a:hover {
    transform: translateY(-5px);
  }

  .related-cover {
    background: #f0f0f0;
    padding: 0.5rem;
    border-radius: 4px;
    margin-bottom: 0.75rem;
    border: 1px solid #cccccc;
  }

  .related-cover img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 4px;
  }

  .related-book h4 {
    color: #000000;
    font-size: 0.9rem;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
  }

  .related-book p {
    color: #666666;
    font-size: 0.8rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .book-detail {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .book-cover-large {
      max-width: 300px;
      margin: 0 auto;
    }

    .book-title {
      font-size: 2rem;
    }

    .book-author {
      font-size: 1.3rem;
    }

    .related-grid {
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 1rem;
    }
  }
</style>